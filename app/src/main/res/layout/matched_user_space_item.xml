<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/user_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/basic_info"
                layout="@layout/basic_user_space_info"></include>
            <TextView
                android:id="@+id/matched_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/accent"
                android:text="Matched!"/>
            <RelativeLayout
                android:id="@+id/detailed_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/basic_info"
                android:layout_marginTop="12dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/matches_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith answered these questions similarly!"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"/>
                <LinearLayout
                    android:id="@+id/matched_attrs_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="4dp"
                    android:layout_below="@+id/matches_header">
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>